<Page x:Class="IndustrialEnterpriseWPF.Views.AddEmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IndustrialEnterpriseWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEmployeesPage" Background="White">

    <Grid>
        <StackPanel>
            <Button Content="Отмена" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Имя:" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>
            <TextBlock Text="Фамилия:" Margin="5"/>
            <TextBox x:Name="LastNameTextBox" Margin="5"/>
            <TextBlock Text="Вакансия:" Margin="5"/>
            <TextBox x:Name="PositionTextBox" Margin="5"/>
            <TextBlock Text="Email:" Margin="5"/>
            <TextBox x:Name="EmailTextBox" Margin="5"/>
            <TextBlock Text="Квалификация:" Margin="5"/>
            <TextBox x:Name="QualificationsTextBox" Margin="5"/>
            <TextBlock Text="ID Силовой установки:" Margin="5"/>
            <TextBox x:Name="idPowerPlantsTextBox" Margin="5"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
