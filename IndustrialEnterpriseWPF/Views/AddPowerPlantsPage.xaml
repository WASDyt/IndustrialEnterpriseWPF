<Page x:Class="IndustrialEnterpriseWPF.Views.AddPowerPlantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IndustrialEnterpriseWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPowerPlantsPage" Background="White">

    <Grid>
        <StackPanel>
            <Button Content="Отмена" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Название:" Margin="10"/>
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <TextBlock Text="Геолокация:" Margin="10"/>
            <TextBox x:Name="GeolocationTextBox" Margin="10"/>
            <TextBlock Text="Информация:" Margin="10"/>
            <TextBox x:Name="IntoTextBox" Margin="10"/>
            <TextBlock Text="Фото (путь к фото):" Margin="10"/>
            <TextBox x:Name="ImageTextBox" Margin="10"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
