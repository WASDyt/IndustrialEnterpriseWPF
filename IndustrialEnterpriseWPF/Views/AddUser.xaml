<Page x:Class="IndustrialEnterpriseWPF.Views.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IndustrialEnterpriseWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser" Background="White">

    <Grid>
        <StackPanel>
            <Button Content="Отмена" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Имя:" Margin="10"/>
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <TextBlock Text="Фамилия:" Margin="10"/>
            <TextBox x:Name="LastnameTextBox" Margin="10"/>
            <TextBlock Text="Email:" Margin="10"/>
            <TextBox x:Name="EmailTextBox" Margin="10"/>
            <TextBlock Text="Пароль:" Margin="10"/>
            <TextBox x:Name="PasswordTextBox" Margin="10"/>
            <!--<TextBlock Text="ID Роли:" Margin="10"/>
            <TextBox x:Name="idRoleTextBox" Margin="10"/>-->
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
